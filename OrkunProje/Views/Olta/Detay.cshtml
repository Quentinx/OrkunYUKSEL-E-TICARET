@using DAL.Entities
@using DAL.Enums
@model Olta


<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Oltalar</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @Html.Partial("~/Views/Partials/_SolMenu.cshtml")


            <div class="col-md-8">
                <div class="product-content-right">


                    <div class="row">
                        <div class="col-sm-6">
                            <div class="product-images">
                                <div class="product-main-img">
                                    <img src="/Content/img/oltaalt.jpg" alt="">
                                </div>

                                <div class="product-gallery">
                                    <img src="/Content/img/product-thumb-1.jpg" alt="">
                                    <img src="/Content/img/product-thumb-2.jpg" alt="">
                                    <img src="/Content/img/product-thumb-3.jpg" alt="">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="product-inner">
                                <h2 class="product-name">@Model.Baslik</h2>
                                <div class="product-inner-price">
                                    <ins>$@Model.Fiyat</ins> <del>$@(Model.Fiyat * 110 / 100)</del>
                                </div>

                                <form action="" class="cart">
                                    <div class="quantity">
                                        <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1">
                                    </div>
                                    <button class="add_to_cart_button" type="submit">Sepete Ekle</button>
                                </form>



                                <div role="tabpanel">
                                    <ul class="product-tab" role="tablist">
                                        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Olta Özellikleri</a></li>
                                        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Yorum</a></li>
                                    </ul>
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane fade in active" id="home">
                                            <h2>Olta Özellikleri</h2>
                                            @if (Model.Ozellikler.Count > 0)
                                            {
                                                var ozellik = Model.Ozellikler.First();
                                                <ul>
                                                    <li><strong>Olta Tipi :</strong> @(ozellik.OltaTipi.HasValue ? ozellik.OltaTipi.Value == OltaTipi.Lrf ? "Lrf" : ozellik.OltaTipi.Value == OltaTipi.Spin ? "Spin" : "" )</li>
                                                    <li><strong>Yapım Yılı :</strong> @(ozellik.YapimYili.HasValue ? ozellik.YapimYili.Value : 2000)</li>
                                                </ul>
                                            }
                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="profile">
                                            <h2>Reviews</h2>
                                            <div class="submit-review">
                                                <p><label for="name">Name</label> <input name="name" type="text"></p>
                                                <p><label for="email">Email</label> <input name="email" type="email"></p>
                                                <div class="rating-chooser">
                                                    <p>Your rating</p>

                                                    <div class="rating-wrap-post">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                    </div>
                                                </div>
                                                <p><label for="review">Your review</label> <textarea name="review" id="" cols="30" rows="10"></textarea></p>
                                                <p><input type="submit" value="Submit"></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
